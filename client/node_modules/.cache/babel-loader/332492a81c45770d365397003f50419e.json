a = {\n        'fname':this.name,\n        \"lname\": this.lname,\n        'email': this.email,\n        'message': this.message\n      }\n\n      try {\n        // Simple GET request using axios\n        if(this.name == '' || this.lname == '' || this.email == '' || this.message == '') {\n             this.formField = true; this.loading = false;\n             window.scrollTo(0,0);\n\n        }else{\n          await apiPost.sendEmail(formData).then(async response => {\n          await response.data\n          this.succ = response.data.message\n          console.log(this.succ)\n          \n          this.formField = false\n          this.loading = false\n          this.formSend = true\n          window.scrollTo(0,0);\n          this.name = ''\n           this.lname = ''\n           this.email = ''\n           this.message = ''\n\n       })\n        }\n        \n       \n      } catch (error) {\n        console.log(error.message)\n      }\n\n      }\n        \n    },\n}\n</script>\n\n\n<style scoped>\n.slika{\n  background-image: url();\n  width: 200px;\n  height: 200px;\n}\na{\n    text-decoration: none;\n    list-style: none;\n }\n.last{\n    width: 100%;\n}\n.forma{\n    margin: 0px 22px;\n}\n.btn{\n    width: 100%;\n    height: 100%;\n}\n.subm{\n    border: 2px solid rgb(0, 0, 0);\n    padding: 14px 1px;\n    width: 180px;\n    font-weight: bold;\n    font-size: 15px;\n    border-radius: 6px;\n    background-color: black;\n    color: white;\n    letter-spacing: 1px;\n    transition: 0.2s ease-in-out;\n\n}\n/* .subm:hover{\n    transition: 0.2s ease-in-out;\n    background-color: white;\n    color: black;\n    border: 2px solid black;\n} */\n.redovi{\n    display: flex;\n    width: 100%;\n    flex-direction: row;\n    flex-wrap: wrap;\n}\n.contact{\n    box-sizing: border-box;\n    display: flex;\n    flex-direction: row;\n    justify-content: center;\n    flex-wrap: wrap;\n}\n.redovi div{\n    width: 49%;\n}\ninput, textarea{\n    width: 100%;\n    border: 2px soli